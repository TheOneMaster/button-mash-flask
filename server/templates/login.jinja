{% extends "template.jinja" %}

{% block head %}
{% endblock %}

{% block body %}
<div class="authblock">
    <div class="authbox">
        <div>
            <h2>Login</h2>
        </div>
        <div>
            {% with messages = get_flashed_messages() %}
            {% if messages %}
                <div class="notification is-danger">
                    {{ messages[0] | safe}}.
                </div>
            {% endif %}
            {% endwith %}
            <form action="/login" method="post">
                <input type="text" class="input form-input" name="email" placeholder="Email address" maxlength="100" required>
                <input type="password" class="password-input input form-input" name="password" placeholder="Password" maxlength="100" required>
                <div class="div-checkbox">
                    <input type="checkbox" class="remember-checkbox checkbox" name="remember">
                    <label class="checkbox-label">Remember me</label>
                </div>
                <button type="submit" class="submit-btn btn">Login</button>
            </form>
        </div>
    </div>
</div>


{% endblock %}
